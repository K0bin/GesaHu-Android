<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/tileHeight"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/rootFrame"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/lesson"
        android:textColor="?android:attr/textColorPrimaryInverse"
        tools:text="2-10"
        android:textSize="18dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:background="?attr/circleColor"
        android:lines="1"
        android:shadowRadius="0"
        android:includeFontPadding="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="top|start"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:minWidth="64dp"
        android:padding="0dp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/room"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/room"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintWidth_default="spread"
        tools:text="Deutsch FÃ¶"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:minWidth="64dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?android:attr/textColorHint"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="@+id/subject"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/subject"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@id/subject"
        app:layout_constraintTop_toTopOf="@+id/subject"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constrainedWidth="true"
        tools:text="R 08-05"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/teacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:minWidth="64dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@id/substituteTeacher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@id/substituteTeacher"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintWidth_default="spread"
        tools:text="Hallo dis is a textxxxxxxxxxxxxxxxxxx"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/substituteTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:gravity="right|end"
        android:textAlignment="textEnd"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:minWidth="64dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/teacher"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@id/teacher"
        app:layout_constraintTop_toTopOf="@+id/teacher"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constrainedWidth="true"
        tools:text="fgfgdgfdgfdgdf"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?android:attr/textColorHint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        tools:text="Klausur findet statt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="72dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>


</android.support.constraint.ConstraintLayout>
