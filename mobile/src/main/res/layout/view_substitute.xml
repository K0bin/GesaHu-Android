<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/tileHeight"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/rootFrame"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/lesson"
        android:textColor="?android:attr/textColorPrimaryInverse"
        tools:text="2-10"
        android:textSize="18dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:background="?attr/circleColor"
        android:lines="1"
        android:shadowRadius="0"
        android:includeFontPadding="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"/>


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Deutsch Förderu. 05a"
        android:id="@+id/subject"
        android:textColor="?android:attr/textColorPrimary"
        android:padding="0dp"
        android:gravity="top"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:minWidth="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/room"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="R 08-05"
        android:id="@+id/room"
        android:gravity="end"
        android:textColor="?android:attr/textColorHint"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:minWidth="64dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/subject"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/subject"/>


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lindenberg xxxxxxxxx Lawl"
        android:id="@+id/teacher"
        android:textColor="?android:attr/textColorSecondary"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:minWidth="64dp"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        app:layout_constraintRight_toLeftOf="@+id/substituteTeacher"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/subject"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Körschner"
        android:id="@+id/substituteTeacher"
        android:gravity="end"
        android:textAlignment="gravity"
        android:textColor="?android:attr/textColorSecondary"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:minWidth="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/teacher"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?android:attr/textColorHint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/teacher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        tools:text="Klausur findet statt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>
