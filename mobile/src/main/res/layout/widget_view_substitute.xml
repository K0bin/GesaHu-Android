<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="64dp"
	android:orientation="horizontal"
	android:id="@+id/container_card">

	<TextView
		android:layout_width="@dimen/tileAvatarSize"
		android:layout_height="@dimen/tileAvatarSize"
		android:id="@+id/lesson"
		android:text="2-10"
		android:textSize="18dp"
		android:layout_gravity="top"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:fontFamily="sans-serif-condensed"
		android:lines="1"
		android:layout_margin="@dimen/tilePadding"
		android:shadowRadius="0"
		android:includeFontPadding="false"
		android:background="@drawable/widget_circle"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="72dp"
			android:layout_marginTop="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="20dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Deutsch Förderu. 05a"
					android:id="@+id/subject"
					android:padding="0dp"
					android:gravity="top"
					android:layout_marginRight="8dp"
					android:includeFontPadding="false"
					android:ellipsize="end"
					android:lines="1"
					android:maxLines="1"
					android:singleLine="true"
					android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
					android:minWidth="64dp"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="R 08-05"
					android:id="@+id/room"
					android:layout_gravity="center_vertical"
					android:gravity="right"
					android:layout_marginLeft="8dp"
					android:fontFamily="sans-serif-condensed"
					android:includeFontPadding="false"
					android:ellipsize="end"
					android:lines="1"
					android:maxLines="1"
					android:singleLine="true"
					android:textAppearance="@style/TextAppearance.AppCompat.Caption"
					android:minWidth="64dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Lindenberg xxxxxxxxx Lawl"
					android:id="@+id/teacher"
					android:layout_marginRight="8dp"
					android:layout_gravity="center_vertical"
					android:includeFontPadding="false"
					android:ellipsize="end"
					android:lines="1"
					android:maxLines="1"
					android:singleLine="true"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:minWidth="64dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Körschner"
					android:id="@+id/substituteTeacher"
					android:gravity="right"
					android:layout_gravity="center_vertical"
					android:textAlignment="gravity"
					android:layout_marginLeft="8dp"
					android:includeFontPadding="false"
					android:ellipsize="end"
					android:lines="1"
					android:maxLines="1"
					android:singleLine="true"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:minWidth="64dp"/>

			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Klausur findet statt"
				android:id="@+id/hint"
				android:fontFamily="sans-serif-condensed"
				android:includeFontPadding="false"
				android:ellipsize="end"
				android:lines="1"
				android:maxLines="1"
				android:singleLine="true"
				android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

		</LinearLayout>

</FrameLayout>
