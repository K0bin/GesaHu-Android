<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="4dp"
              android:layout_marginBottom="8dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/topCardHeight"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-32dp"
        android:padding="16dp"
        app:cardElevation="6dp"
        android:id="@+id/marks_card"
        android:visibility="gone">

        <rhedox.gesahuvertretungsplan.ui.widget.NumberCircle
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:id="@+id/mark"
            app:outlineThickness="2dp"
            app:ovalText="@string/mark"
            app:ovalColor="#FF2E7D32"
            app:outlineColor="#FF2E7D32"
            app:ovalTextColor="@android:color/white"
            app:outlineTextColor="?android:attr/textColorPrimary"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>
</LinearLayout>